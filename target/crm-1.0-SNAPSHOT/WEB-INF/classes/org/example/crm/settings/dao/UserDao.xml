<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.crm.settings.dao.UserDao">

  <select id="selectByNameAndPwd" resultType="org.example.crm.settings.domain.User">
    select * from `tbl_user` where loginAct=#{loginAct} and loginPwd=#{loginPwd}
  </select>

  <select id="selectUserList" resultType="org.example.crm.settings.domain.User">
      select * from `tbl_user`
  </select>
</mapper>